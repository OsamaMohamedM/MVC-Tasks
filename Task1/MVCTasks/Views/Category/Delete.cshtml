@model MVCTasks.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}


<div class="container">
    <main role="main" class="pb-3">
        <div class="row mb-4">
            <div class="col-md-12">
                <h1 class="display-4 text-danger">Delete Category</h1>
                <hr />
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">Confirmation Required</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this category?
                            </h5>
                            <p class="mb-0">This action cannot be undone.</p>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Category Details</h5>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-3">ID:</dt>
                                    
                                    <dd class="col-sm-9">@Model.Id</dd>

                                    <dt class="col-sm-3">Name:</dt>
                                   
                                    <dd class="col-sm-9">@Model.Name</dd>

                                    <dt class="col-sm-3">Description:</dt>
                                   
                                    <dd class="col-sm-9">@Model.Description</dd>
                                </dl>
                            </div>
                        </div>

                        <form asp-action="Delete" asp-controller="Category" method="post">
                            
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Confirm Delete
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>