@{
    ViewData["Title"] = "Home Page";
}

@model ReportUploadViewModel

<form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ReportTitle"></label>
        <input asp-for="ReportTitle" class="form-control" />
        <span asp-validation-for="ReportTitle"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReportFile"></label>
        <input asp-for="ReportFile" type="file" class="form-control" />
        <span asp-validation-for="ReportFile"></span>
    </div>

    <button type="submit" class="btn btn-primary">رفع التقرير</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}